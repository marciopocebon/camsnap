#blue start 
	BS="-e \033[1;34m"
	BSA="\033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[31m"
#green start
	GNS="-e \033[1;92m"
	GSA="\033[1;92m"
#white start
        WHS="\033[0;97m"
	
printf '\033]2;Camera Snapshot\a'

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$GNS"["$CE"+"$GSA"] Installing update..."$CE""
{
rm -r ~/camsnap
rm /bin/camsnap
rm /usr/local/bin/camsnap
cd ~
git clone https://github.com/entynetproject/camsnap.git
cd camsnap
chmod +x install.sh
./install.sh
} &> /dev/null
echo ""$GNS"["$CE"+"$GSA"] Successfully updated..."$CE""
sleep 1
exit
fi

cd ~
if [[ -d ~/camsnap ]]
then
{
cd ~/camsnap
} &> /dev/null
bash camsnap.sh
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/camsnap.git
cd ~/camsnap
} &> /dev/null
bash camsnap.sh
else
cd ~
sleep 1
exit
fi
fi
